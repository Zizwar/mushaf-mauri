    <CardItem button onPress={onpress}>
      <Col style={{ alignItems: "center", margin: 3 }}>
        <View style={{ alignSelf: "center" }}>
          <Text style={{ textAlign: "center", color: "#555", fontSize }}>
            {text}
          </Text>
        </View>
      </Col>
    </CardItem>
    {page && (
      <CardItem>
        <Left />
        <Right>
          <Text note style={{ color: "#555", textAlign: "right" }}>
