export const Itemino = ({
  onPress,
  icon,
  iconSize = 26,
  text = null,
  color = "#555",
  lang = "en",
  isRtl = false
}) => (

  <ListItem noBorder style={{ height: 42 }} transparent onPress={onPress}>
  {isRtl ?
    ({lang === "ar"  ? (
      <Left />
    ) : (
      <Left>
        <Button transparent>
          <Icon name={icon} size={iconSize} />
        </Button>
      </Left>
    )}
    <Body>
      <Text style={{ color }}>{text}</Text>
    </Body>
    {lang === "ar" ? (
      <Right>
        <Button transparent>
          <Icon name={icon} size={iconSize} />
        </Button>
      </Right>
    ) : (
      <Right />
    )}
	):    ({lang !== "ar"  ? (
      <Left />
    ) : (
      <Left>
        <Button transparent>
          <Icon name={icon} size={iconSize} />
        </Button>
      </Left>
    )}
    <Body>
      <Text style={{ color }}>{text}</Text>
    </Body>
    {lang !== "ar" ? (
      <Right>
        <Button transparent>
          <Icon name={icon} size={iconSize} />
        </Button>
      </Right>
    ) : (
      <Right />
    )}
	)
  }
  </ListItem>
);
