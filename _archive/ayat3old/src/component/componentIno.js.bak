}) => (
  <Card>
    <CardItem button onPress={onpress} style={{ height: 60 }}>
      <Left>
        <View
          style={{
            position: "absolute",
            width: 56,
            color: "#fff",
            zIndex: 1
          }}
        >
          <Text note style={{ color: "#fff", textAlign: "center" }}>
            {aya}
          </Text>
        </View>
        <Thumbnail
          square
          source={require("../../assets/number.png")}
          style={{ position: "absolute", zIndex: 0 }}
        />
      </Left>

      <Right>
        <H3 style={{ textAlign: "right", color: "#007aff" }}>{sura}</H3>
